\def\applyformula{
\if\@usecondeffect0
(s \setminus \dele(a)) \cup \adde(a)
\else
(s
 \setminus \braces{e \mid (c \triangleright e) \in \dele(a), c\satisfies s})
 \cup      \braces{e \mid (c \triangleright e) \in \adde(a), c\satisfies s}
\fi
}

